{% extends 'base.twig' %}

{% block body %}

<div class="container">
	{% if post.image_path is not null %}
	<img src="{{ asset_url(post.image_path) }}" class="img-fluid" alt="...">
	{% endif %}
	<h1>{{ post.title|escape }}</h1>
	<div class="container mb-3">
		<div class="row">
			<span class="text-muted">Iordanov Dmitry | {{ post.published_date|date("F d, Y") }}</span>
		</div>
	</div>
	<div>
		{{ post.content|raw }}
	</div>
</div>

{% endblock %}