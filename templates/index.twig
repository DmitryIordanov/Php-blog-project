{% extends 'base.twig' %}

{% block body %}
   <div class="main">
   	<div class="container" style="text-align: center;">
   		<h1 class="mb-5 mt-5">Hello, world!</h1>
   		<div class="row" style="justify-content: center;">
   			{% for post in posts %}
   			<div class="card mycartstyle" style="width: 18rem;">
				  <img src="https://dummyimage.com/320x200/0088ff/0011ff" class="card-img-top" alt="...">
				  <div class="card-body">
				    <h5 class="card-title">{{ post.title|escape }}</h5>
				    <p class="card-text">{{ post.description|escape }}</p>
				    <a href="{{ post.url_key }}" class="btn btn-primary">Learn more</a>
				  </div>
				</div>
				{% endfor %}
   		</div>
   	</div>
   </div>

{% endblock %}